<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <SuppressTrimAnalysisWarnings>true</SuppressTrimAnalysisWarnings>
    </PropertyGroup>
    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <OutputPath Condition="$([MSBuild]::IsOSPlatform('Windows'))">..\SourceGit\bin\Debug\net8.0\</OutputPath>
        <OutputPath Condition="$([MSBuild]::IsOSPlatform('MacOS'))">../SourceGit/bin/Debug/net8.0/Contents/MacOS/</OutputPath>
        <OutputPath Condition="$([MSBuild]::IsOSPlatform('Linux'))">../SourceGit/bin/Debug/net8.0/</OutputPath>
    </PropertyGroup>
</Project>
